<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/actionTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="타이틀"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/requestFriendBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_person_add_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/myLocationBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_my_location_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/editAppointmentBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_edit_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/addFriendBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_add_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/addPlaceBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_add_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/addAppointmentBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_add_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/zoomOutMapBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_zoom_out_map_black_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/deletePlaceBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_close_black_24dp"
            android:visibility="visible" />
    </FrameLayout>

</layout>