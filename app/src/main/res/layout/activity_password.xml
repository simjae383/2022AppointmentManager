<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".ui.PasswordActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호" />

        <EditText
            android:id="@+id/currentPwEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:background="@drawable/lightskyblue_rectangle_r6"
            android:padding="10dp"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="새로운 비밀번호" />

        <EditText
            android:id="@+id/newPwEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:background="@drawable/lightskyblue_rectangle_r6"
            android:padding="10dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/newPwCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="8자리 이상 입력해주세요" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePwBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:enabled="false"
            android:backgroundTint="@color/lightSkyBlue"
            android:text="비밀번호 변경" />

    </LinearLayout>
</layout>